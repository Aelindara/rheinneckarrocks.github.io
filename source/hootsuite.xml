---
use: ["events", "usergroups"]
permalink: hootsuite.xml
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
    <channel>
        <title>#rheinneckarrocks</title>
        <description>Was geht ab in der Metropolregion Rhein-Neckar?</description>
        <link>http://www.rheinneckarrocks.de</link>
        <atom:link href="http://rheinneckarrocks.de/hootsuite.xml" rel="self" type="application/rss+xml" />
        {% for event in data.events %}
        {% if date(event.date) < date('+1 week') and date(event.date) > date()  %}
        <item>
            {% set ugname = '' %}
            {% set twitter = '' %}
            {% for usergroup in data.usergroups %}
                {% if event.usergroup == usergroup.title %}
                    {% set ugname = [ 'Treffen "', usergroup.name, '" ']|join %}
                    {% if usergroup.twitter %}
                        {% set twitter = [ ' /cc @', usergroup.twitter ]|join %}
                    {% endif %}
                {% endif %}
            {% endfor %}
            {% if not ugname %}
                {% set ugname = event.title %}
            {% endif %}

            <title>{{ ugname }} am {{ event.date | date('d.m.') }} Sei dabei!{{ twitter }}</title>
            <description>{{ event.title }} #rheinneckarrocks</description>
            <pubDate>{{ event.date | date_modify("-1 week") | date('c') }}</pubDate>
            <link>{{ event.link }}</link>
            <guid>{{ event.link }}</guid>
        </item>
        {% endif %}
        {% endfor %}
    </channel>
</rss>
